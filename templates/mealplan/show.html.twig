{% extends 'base.html.twig' %}

{% block title %}Mealplan{% endblock %}
{% block body %}

    <table class="schedule-table filtering text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mealplan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mealplan.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mealplan.description }}</td>
            </tr>
            <tr>
                <th>Calories_per_day</th>
                <td>{{ mealplan.caloriesPerDay }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mealplan_index') }}" class="btn btn-outline-dark w-100 my-1">back to list</a>

    <a href="{{ path('app_mealplan_edit', {'id': mealplan.id}) }}" class="btn btn-outline-success w-100 my-1">edit</a>

    {{ include('mealplan/_delete_form.html.twig') }}
{% endblock %}
